<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE Map>
<Map background-color="white" srs="+proj=latlong +datum=WGS84">

  <Layer name="layer" srs="+proj=latlong +datum=WGS84">
    <StyleName>My Style</StyleName>
    <Datasource>
      <Parameter name="type">osm</Parameter>
      <Parameter name="file">points.osm</Parameter>
    </Datasource>
  </Layer>

    <Style name="My Style">
    <Rule>
      <PointSymbolizer/>
      <TextSymbolizer name="[name]" face-name="DejaVu Sans Book" size="16" placement="point" dy="8" fill="blue" placement-type="list">
          <Placement size="10"  dy="-8" fill="red"/>
          <Placement name="'S'+[nr]" fill="green"/>
	  <Placement name="[nr]" fill="orange" dy="8"/>
      </TextSymbolizer>
    </Rule>
  </Style>

</Map>
